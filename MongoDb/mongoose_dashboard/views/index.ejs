<body>
    <% if (animals) { %>
        <% for (var i =0; i < animals.length; i ++) { %>
            <p>Species: <%= animals[i].type%></p>
            <p>Name:<a href="<%=animals[i]._id%>"><%= animals[i].name%></a></p>
